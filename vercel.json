{
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/portfolio-backend/api/index.js"
    }
  ],
  "framework": "vite",
  "functions": {
    "portfolio-backend/api/index.js": {
      "runtime": "nodejs18.x"
    }
  }
} 